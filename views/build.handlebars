{{!-- HANDLEBARS COMPONENT FOR EMPLOYER REQUESTING BUILD --}}

<section>
    <header>
        <h1>Request A Project!</h1>
    </header>

    <section>
        <form id="request-form">
            <label for="request-company-name">Company Name</label>
            <input type="text" id="request-company-name" placeholder="Your Company Name">
            <label for="request-title">Your Project Title</label>
            <input type="text" id="request-title" placeholder="Project Title">
            <label for="request-description">Describe Your Project</label>
                
            <div>
                <textarea name="request-description" id="request-description" form="request-form"></textarea>
            </div>

            <label for="tech-stack">Choose Your Tech Stack</label>

            <div>
                <input type="checkbox" id="tech-stack1" name="tech-stack" value="HTML">HTML</input>
                <input type="checkbox" id="tech-stack2" name="tech-stack" value="CSS">CSS</input>
                <input type="checkbox" id="tech-stack3" name="tech-stack" value="JavaScript">JavaScript</input>
                <input type="checkbox" id="tech-stack4" name="tech-stack" value="TypeScript">TypeScript</input>
                <input type="checkbox" id="tech-stack5" name="tech-stack" value="React">React</input>
                <input type="checkbox" id="tech-stack6" name="tech-stack" value="Python">Python</input>
                <input type="checkbox" id="tech-stack7" name="tech-stack" value="Java">Java</input>
                <input type="checkbox" id="tech-stack8" name="tech-stack" value="NodeJS">NodeJS</input>
                <input type="checkbox" id="tech-stack9" name="tech-stack" value="MySQL">MySQL</input>
                <input type="checkbox" id="tech-stack10" name="tech-stack" value="PHP">PHP</input>
                <input type="checkbox" id="tech-stack11" name="tech-stack" value="C++">C++</input>
            </div>

            <div>
                <button type="submit" form="request-form" value="Submit">Find Talent!</button>
            </div>
        </form>
    </section>

</section>