

    <!-- MAIN BODY SECTION, DYNAMICALLY UPDATE TEXT IF USER IS LOGGED IN/SIGNED UP -->
    <section class="login-body">
        <section class="sign-up-hero">
        <form id="signup-form" class="sign-up-form">
            <!-- <label for="sign-up_fname">First Name</label> -->
            <input type="text" class="sign-up__fname sign-up-input" id="sign-up-fname" placeholder="First Name" autocapitalize="off">
            <input type="text" class="sign-up__lname sign-up-input" id="sign-up-lname" placeholder="Last Name" autocapitalize="off">
            <input type="text" name="company" class="sign-up__company sign-up-input" id="sign-up-company" placeholder="Company Name" autocapitalize="off">

            <div class="sign-up__auth">
                <input type="text" class="sign-up__email sign-up-input sign-up-creds" id="sign-up-email" placeholder="Email" autocapitalize="off">
