            </div>
        </form>
        </section>

        <section class="log-in-hero">
        <form action="/build" method="post" id="login-form" class="sign-up-form">
            <!-- <label for="log-in-email">LOG IN</label> -->
            <div class="sign-up__auth">
                <input type="text" class="log-in__email sign-up-input sign-up-creds" id="log-in-email" placeholder="Email" autocapitalize="off">
                <input type="text" class="log-in__password  sign-up-input sign-up-creds" id="log-in-password" placeholder="Password" autocapitalize="off">
                {{!-- <i class="fas fa-eye" id="pwd-toggle"></i> --}}
